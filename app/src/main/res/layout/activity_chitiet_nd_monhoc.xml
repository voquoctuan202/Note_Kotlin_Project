<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.Chitiet_ND_MonhocActivity">

    <ImageView
        android:id="@+id/back_chitiet_ndmh"
        android:layout_width="53dp"
        android:layout_height="42dp"
        android:layout_marginLeft="20px"
        android:layout_marginTop="60px"
        android:src="@drawable/back_button"
        app:layout_constraintHorizontal_bias="0.41"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </ImageView>

    <ImageView
        android:id="@+id/save_chitiet_ndmh"
        android:layout_width="43dp"
        android:layout_height="32dp"
        android:layout_marginStart="342dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/icon_check"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </ImageView>

    <ImageView
        android:id="@+id/hinh_chitiet_monhoc"
        android:layout_width="387dp"
        android:layout_height="354dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.206"
        app:srcCompat="@drawable/add_icon"></ImageView>

    <EditText
        android:id="@+id/chitiet_ten_ndmh"
        android:layout_width="333dp"
        android:layout_height="59dp"
        android:layout_marginBottom="188dp"
        android:backgroundTint="#00FFFFFF"
        android:ems="10"
        android:textStyle="bold"
        android:text="Tiêu đề"
        android:textSize="25sp"
        android:hint="Tên nội dung"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.435"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/hinh_chitiet_monhoc"
        app:layout_constraintVertical_bias="0.307" />

    <EditText
        android:id="@+id/chitiet_ndmh"
        android:layout_width="343dp"
        android:layout_height="200dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:gravity="start|top"
        android:hint="Chi tiết"
        android:text="Chi tiết cho nội dung này"
        android:textSize="20sp"
        android:backgroundTint="#00FFFFFF"
        android:inputType="textMultiLine"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/chitiet_ten_ndmh"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>