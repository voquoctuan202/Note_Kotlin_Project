<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.LichHocActivity">

    <ImageView
        android:id="@+id/back_Lichhoc"
        android:layout_width="50dp"
        android:layout_height="37dp"
        android:layout_marginLeft="20px"
        android:layout_marginTop="60px"
        android:src="@drawable/back_button">

    </ImageView>

    <ImageView
        android:id="@+id/back_home_lh"
        android:layout_width="50dp"
        android:layout_height="37dp"

        android:layout_marginTop="60px"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20px"
        android:src="@drawable/img_home">

    </ImageView>

    <TextView
        android:id="@+id/textTenLH"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginVertical="30dp"
        android:textColor="@color/black"
        android:fontFamily="@font/lato_semibold"
        android:text="Lịch học"
        android:textSize="50dp"

        />
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:rowCount="4"
        android:layout_below="@+id/textTenLH"
        android:columnCount="2"
        >

        <androidx.cardview.widget.CardView
            android:id="@+id/lichhocT2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_rowWeight="1"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="8dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal"
                android:gravity="center"
                android:orientation="vertical">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Thứ 2"
                    android:fontFamily="@font/lato_semibold"
                    android:textColor="@color/black"
                    android:textSize="25dp"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    ></TextView>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/lichhocT3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
